/*左侧导航  */
.page-top{
  position: fixed;
  width: 75%;
  height: 100%;
  top: 1rpx;
  left: 0;
  background-color:#fff;
  transform: rotate(0deg) scale(1) translate(-100%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(-100%,0%); 
  transition: all 0.4s ease;
  z-index: 998;
}
.page-top-show{
  transform: rotate(0deg) scale(1) translate(0%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(0%,0%); 
}

/*右侧展示  */
.page-bottom{
  height: 100%;
  position: relative;
}
.off-nav-list{
  width: 75rpx;
  height: 70rpx;
  margin: 0rpx  30rpx 0rpx 20rpx;
  float: left;
}
.page-bottom-content{
  float: left;
  font-size: 30rpx;
  line-height: 70rpx;
}
.page-mask{
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,0.1); 
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}
.page-mask-hide{
  display: none;
}

